<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/getting"
    android:padding="20dp"
    android:weightSum="120">
    

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name:"
        android:layout_weight="10"
          android:textColor="#008080" />

    <EditText
        android:id="@+id/etpayname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="10" >

        
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter ID:" 
        android:layout_weight="10"
      
          android:textColor="#008080"/>

    <EditText
        android:id="@+id/etpayid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ems="10" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
         android:textColor="#008080"
        android:text="Credit present before payment(in Rs): "
        android:layout_weight="10"
    />

    <EditText
    
        android:id="@+id/etprecredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
          android:textColor="#008080"
        android:text="Credit left after payment(in Rs):" />

    <EditText
        android:id="@+id/etaftercredit"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:ems="10" />

    <Button
        android:id="@+id/bpayment"
     android:layout_width="100dp"
      android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:background="@drawable/mybutton"
        android:text="PAY"
        android:alpha="0.5" />
    
     <TextView
        android:id="@+id/tvinvisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
         android:visibility="invisible"
        android:text="Money newly deposited(in Rs) :" 
  
       
          android:textColor="#008080"/>

    <EditText
        android:id="@+id/etafterdeposit"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="wrap_content"
         android:visibility="invisible"
        android:ems="10" />
    
    <Button
        android:id="@+id/bUPDATE"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
         android:visibility="invisible"
          android:background="@drawable/mybutton"
          android:layout_weight="10"
           
           android:layout_gravity="center"
        android:text="Update" />
<LinearLayout
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="HOME"
         android:background="@drawable/mybutton"
        android:layout_weight="1"
        android:alpha="0.5" />

    <Button
        android:id="@+id/b2"
       android:layout_width="wrap_content"
      android:layout_height="50dp"
         android:background="@drawable/mybutton"
        android:text="EXIT"
         android:layout_weight="1" 
          android:alpha="0.5" />
  </LinearLayout>
</LinearLayout>