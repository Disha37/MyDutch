<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="120"
    android:padding="20dp"
    android:background="@drawable/getting">

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of people to dutch:"
          android:textColor="#008080"
        android:layout_weight="10"/>

    <EditText
        android:id="@+id/etnoofpeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
          android:layout_weight="10"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter expenses incurred(Enter all fields):"
                     
          android:textColor="#008080"
          android:layout_weight="10" />
        
    <TextView
        android:id ="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOOD:"
          android:textColor="#008080"
          android:layout_weight="10" />

    <EditText
        android:id="@+id/etfood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
          android:layout_weight="10">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRANSPORT:"
          android:textColor="#008080"
          android:layout_weight="10" />

    <EditText
        android:id="@+id/ettransport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
          android:layout_weight="10" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UTILITIES:" 
          android:textColor="#008080"
          android:layout_weight="10"/>

    <EditText
        android:id="@+id/etutilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
          android:layout_weight="10"/>

    <Button
        android:id="@+id/bCalculatedutch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Calculate Dutch Amount" 
          android:layout_weight="10"
           android:layout_gravity="center"
            android:background="@drawable/mybutton"
           android:alpha="0.5"/>

    <TextView
        android:id="@+id/tvdisplaydutch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="Amount to be paid per person is Rs"
       android:textColor="#008080"
         android:layout_weight="10" />
     <Button
        android:id="@+id/bpay"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text=" PAY" 
        android:alpha="0.5"
        android:layout_gravity="center"
          android:layout_weight="10"
           android:background="@drawable/mybutton"/>
    

</LinearLayout>
