<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_gravity="center"
    android:weightSum="140"
    android:padding="20dp"
    android:background="@drawable/getting"
   
    >

    <Button
        android:id="@+id/bgotoReg"
        android:layout_width="200dp"
        android:layout_height="20dp"
         android:background="@drawable/mybutton"
                android:text="REGISTER"
         android:layout_gravity="center"
         android:alpha="0.5"
         android:layout_weight="15" 
      
        
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />

    <Button
        android:id="@+id/bgotocreditdetails"
      android:layout_width="200dp"
        android:layout_height="20dp"
        android:alpha="0.5"
         android:background="@drawable/mybutton"
      
        
        android:text="CREDIT DETAILS"
         android:layout_gravity="center"
          android:layout_weight="15" 
          />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />

    <Button
        android:id="@+id/bgotocalcdutch"
       android:layout_width="200dp"
        android:layout_height="20dp"
        android:alpha="0.5"
         android:background="@drawable/mybutton"
        
        android:text="DUTCH AND PAY" 
         android:layout_gravity="center"
          android:layout_weight="15"
           />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />

    <Button
        android:id="@+id/bVIEWDET"
        android:layout_width="200dp"
        android:layout_height="20dp"
         android:background="@drawable/mybutton"
       android:alpha="0.5"
        android:text="VIEW USER DETAILS"
         android:layout_gravity="center"
          android:layout_weight="15" 
           />
    

         

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />
     <Button
        android:id="@+id/bVIEWEXP"
        android:layout_width="200dp"
        android:layout_height="20dp"
         android:background="@drawable/mybutton"
       android:alpha="0.5"
        android:text="VIEW EXPENDITURES"
         android:layout_gravity="center"
          android:layout_weight="15" 
           />
    

         

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />

    <Button
        android:id="@+id/bAbout"
       android:layout_width="200dp"
        android:layout_height="20dp"
         android:background="@drawable/mybutton"
        android:alpha="0.5"
        android:text="ABOUT THE APP" 
         android:layout_gravity="center"
          android:layout_weight="15" 
          />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />

    <Button
        android:id="@+id/bgotoReset"
       android:layout_width="200dp"
        android:layout_height="20dp"
         android:background="@drawable/mybutton"
        android:alpha="0.5"
        android:text="RESET"
         android:layout_gravity="center"
          android:layout_weight="15" 
      />
  <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />
    
</LinearLayout>
